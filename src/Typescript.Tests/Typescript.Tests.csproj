        <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Typescriptr\Typescriptr.csproj" />
    </ItemGroup>

</Project>
